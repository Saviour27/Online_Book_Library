<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyLibrary</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyLibrary.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="w3.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <div class="container-fluid bg-light border-bottom py-3">
            <!-- First row in header -->
            <div class="row">
                <div class="col-9 text-warning">
                    <a class="ms-3" asp-controller="Book" asp-action="Index">logo</a>
                </div>
                <div class="col-3">
                    <div class="row">
                        <a class="col-5 text-end me-3" asp-controller="" asp-action="">Register</a>
                        <a class="col-2" asp-controller="" asp-action="">LogIn</a>
                        <a class="col-4" asp-controller="Book" asp-action="ManageBooks">Manage Books</a>
                    </div>
                </div>
            </div>
            <!-- Second row in header -->
            <div class="row mb-3">
                <div class="col-12 text-center text-end">
                    <span class="me-3">Wish to search</span>
                    <span class="border rounded-pill py-1 px-2 me-3">
                        <input type="radio">
                        <label class="ms-1">books</label>
                    </span>
                    <span class="me-3">or</span>
                    <span class="border rounded-pill py-1 px-2 me-3">
                        <input type="radio">
                        <label class="ms-1">cds</label>
                    </span>
                    <span>Only available copies will be displayed</span>
                </div>
            </div>
        </div>
        <form class="row justify-content-center" asp-controller="Book" asp-action="Filter" style="position:relative;top:-25px">
            <input name="searchString" type="text" class="col-4 ms-5 p-2" placeholder="Winning in the digital age">
            <button class="col-1 bg-black text-white p-2" type="submit">Search</button> 
        </form>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="~/https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>