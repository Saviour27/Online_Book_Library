@model IEnumerable<Books>

    @{
        ViewData["Title"] = "Home Page";
    }

<div class="w3-row s12 w3-col ">
    <div style="font-weight: bold" class="w3-col s12 w3-row w3-center w3-large"> what interest you</div>
    <div class="w3-col s3 w3-center w3-padding">
        <div class="w3-col s12 w3-padding"> Fiction Books</div>
        <a> <div style="width:40%;margin-right:5%" class="w3-margin-bottom w3-col w3-margin-right w3-padding w3-border w3-border-balck w3-round-xxlarge">Drama</div></a>
        <a> <div style="width:40%;margin-right:5%" class="w3-margin-bottom w3-col w3-margin-right w3-padding w3-border w3-border-balck w3-round-xxlarge">Horror</div></a>
        <a> <div style="width:40%;margin-right:5%" class="w3-margin-bottom w3-col w3-margin-right w3-padding w3-border w3-border-balck w3-round-xxlarge">Mystery</div></a>
        <a> <div style="width:40%;margin-right:5%" class="w3-margin-bottom w3-col w3-margin-right w3-padding w3-border w3-border-balck w3-round-xxlarge">Sci-Fi</div></a>
    </div>
    <div class="w3-col s3 w3-center w3-padding">
        <div class="w3-col s12 w3-padding"> Non Fiction Books</div>
        <a> <div style="width:40%;" class="w3-margin-bottom w3-col w3-margin-right w3-padding w3-border w3-border-balck w3-round-xxlarge">Art</div></a>
        <a> <div style="width:40%;" class="w3-margin-bottom w3-col w3-margin-right w3-padding w3-border w3-border-balck w3-round-xxlarge">Biography</div></a>
        <a> <div style="width:40%;" class="w3-margin-bottom w3-col w3-margin-right w3-padding w3-border w3-border-balck w3-round-xxlarge">Sport</div></a>
        <a> <div style="width:40%;" class="w3-margin-bottom w3-col w3-margin-right w3-padding w3-border w3-border-balck w3-round-xxlarge">Travel</div></a>
    </div>
    <div class="w3-col s6 w3-center w3-padding">
        <div class="w3-col s12 w3-padding"> CD Genres</div>
        <a> <div style="width:20%;margin-right:6%" class="w3-margin-bottom w3-col w3-margin-right w3-padding w3-border w3-border-balck w3-round-xxlarge">Blues</div></a>
        <a> <div style="width:20%;margin-right:6%" class="w3-margin-bottom w3-col w3-margin-right w3-padding w3-border w3-border-balck w3-round-xxlarge">Classic</div></a>
        <a> <div style="width:20%;margin-right:6%" class="w3-margin-bottom w3-col w3-margin-right w3-padding w3-border w3-border-balck w3-round-xxlarge">Folk</div></a>
        <a> <div style="width:20%;margin-right:6%" class="w3-margin-bottom w3-col w3-margin-right w3-padding w3-border w3-border-balck w3-round-xxlarge">Hip-Hop</div></a>
        <a> <div style="width:20%;margin-right:6%" class="w3-margin-bottom w3-col w3-margin-right w3-padding w3-border w3-border-balck w3-round-xxlarge">Rap</div></a>
        <a> <div style="width:20%;margin-right:6%" class="w3-margin-bottom w3-col w3-margin-right w3-padding w3-border w3-border-balck w3-round-xxlarge">Reggae</div></a>
        <a> <div style="width:20%;margin-right:6%" class="w3-margin-bottom w3-col w3-margin-right w3-padding w3-border w3-border-balck w3-round-xxlarge">Rock</div></a>
    </div>
</div>

<div class="row">
    @{
        int index = 0;
    }

    @foreach (var item in Model)
    {
        <div class="col-lg-2 mb-4">
            <a class="ms-3" asp-controller="Book" asp-action="Details" asp-route-id="@item.Id">
                <div class="card">
                    <img src="~/@item.ImageURL" alt="@item.Title">
                    <div class="card-body">
                        <p class="card-text"><b>Title: </b>@item.Title</p>
                        <p class="card-text"><b>Author: </b>@item.Author</p>
                    <div class="card-text"><b>Rating</b>
                        <span class="cursor-pointer text-black">&#9733;</span>
                        <span class="cursor-pointer text-black">&#9733;</span>
                        <span class="cursor-pointer text-black">&#9733;</span>
                        <span class="cursor-pointer text-black">&#9733;</span>
                        <span class="cursor-pointer text-black">&#9733;</span>
                    </div>
                    </div>
                </div>
            </a>
        </div>
        {
            index++;
            if (index % 6 == 0)
            {
                <div class="w-100"></div>
            }
        }
    }
</div>