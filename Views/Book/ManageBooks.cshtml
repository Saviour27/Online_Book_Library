@model IEnumerable<Books>
@{
    ViewData["Title"] = "Home Page";
}

<div class=" row">
   <div class="col-md-8 offset-md-2">
       <table class="table">
           <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model =>model.Title)</th>
                    <th>Actions</th>
                </tr>
           </thead>
           <tbody>
               @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a> |
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
                <form>
                <button class="col-1 bg-black text-white p-2" asp-controller="Book" asp-action="Create">Add Book</button>
                </form>
            </tbody>
       </table>
   </div>
</div>